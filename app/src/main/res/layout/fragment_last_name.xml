<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.valdeslab.learningapp.LastNameFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/fragment_two" />

    <TextView
        android:id="@+id/textview_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittext_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place text here"/>

    <Button
        android:id="@+id/button_frag_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send"/>

</LinearLayout>
